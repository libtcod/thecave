{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(Windows) Launch",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        // Workaround for missing `ogg.dll`, `vorbis.dll`, and `vorbisfile.dll` next to execuable.
        {"name": "Path", "value": "${env:Path};${workspaceFolder}/build/vcpkg_installed/x64-windows/bin"}
      ],
      "console": "internalConsole"
    }
  ]
}
